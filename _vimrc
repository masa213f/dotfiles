set number
"set expandtab
set tabstop=4
set shiftwidth=4
set softtabstop=4
set autoindent

set list
set listchars=tab:»-,trail:-,eol:↲,extends:»,precedes:«,nbsp:%

set paste

set statusline=%F
set statusline+=%m
set statusline+=%r
set statusline+=%=
set statusline+=[enc:%{&fileencoding}]
set statusline+=[line:%l/%L]
set laststatus=2
