# Define following settings in .gitconfig.local
# [user]
#   name = User Name
#   email = mail-address@example.com

[include]
  path = ~/.gitconfig.local
[ghq]
  root = ~/go/src
  root = ~/workspace
[core]
  autocrlf = false
  editor = vim
  symlinks = true
  excludesfile = ~/.gitignore.global
[color]
  ui = auto
[push]
  default = current
[alias]
  a  = add
  ap = add -p
  co = checkout
  ci = commit
  df = diff
  dfc = diff --cached
  dfs = diff --name-only
  st = status
  br = branch
  l = log
  lp = log -p
  lo = log --oneline
  ln = log --name-only
  lon = log --oneline --name-only
